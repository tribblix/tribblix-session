#!/bin/sh

TBIN=/usr/bin/uwm
PKG="TRIBuwm"
DESC="UDE Window Manager"

case $1 in
-query)
  printf "$DESC "
  if [ -x ${TBIN} ]; then
     printf "(installed)\n"
  else
     printf "(not installed)\n"
  fi
  exit 0
  ;;
esac

if [ -x ${TBIN} ]; then
  exit 0
fi

echo "The $DESC session is not installed"
echo "  Perhaps you should install the ${PKG} package"
echo "  # zap install ${PKG}"
exit 1
