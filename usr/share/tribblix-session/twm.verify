#!/bin/sh

TBIN=/usr/bin/twm
PKG="x11"
DESC="TWM"

case $1 in
-query)
  printf "$DESC "
  if [ -x ${TBIN} ]; then
     printf "(installed)\n"
  else
     printf "(not installed)\n"
  fi
  exit 0
  ;;
esac

if [ -x ${TBIN} ]; then
  exit 0
fi

echo "The $DESC session is not installed"
echo "  Perhaps you should install the ${PKG} overlay"
echo "  # zap install-overlay ${PKG}"
exit 1
