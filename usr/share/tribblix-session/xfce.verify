TBIN=/usr/bin/startxfce4
PKG="xfce"
DESC="Xfce"

case $1 in
-query)
  if [ -x ${TBIN} ]; then
     printf "%s (installed)\n" "$DESC"
  else
     printf "%s (not installed)\n" "$DESC"
  fi
  exit 0
  ;;
esac

if [ -x ${TBIN} ]; then
  exit 0
fi

echo "The $DESC session is not installed"
echo "  Perhaps you should install the ${PKG} overlay"
echo "  # zap install-overlay ${PKG}"
exit 1
